{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node"]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
